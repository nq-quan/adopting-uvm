+   // func: build_phase
+   virtual function void build_phase(uvm_phase phase);
+      super.build_phase(phase);
+
+      mon = mon_c::type_id::create("mon", this);
+      if(is_active) begin
+         drv = drv_c::type_id::create("drv", this);
+         sqr = sqr_c::type_id::create("sqr", this);
+      end
+   endfunction : build_phase
+
+   ////////////////////////////////////////////
